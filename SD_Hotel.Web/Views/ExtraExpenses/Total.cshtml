@{
    ViewData["Title"] = "Toplam Gider";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Toplam Gider Raporu</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <form method="get" class="form-inline">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label class="control-label">Başlangıç Tarihi:</label>
                                        <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="control-label">Bitiş Tarihi:</label>
                                        <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />
                                    </div>
                                    <div class="col-md-3">
                                        <button type="submit" class="btn btn-primary mt-4">
                                            <i class="fas fa-calculator"></i> Hesapla
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h4 class="card-title">Toplam Gider</h4>
                                    <h2 class="card-text">@ViewBag.Total.ToString("C")</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h4 class="card-title">Tarih Aralığı</h4>
                                    <p class="card-text">
                                        @if (ViewBag.StartDate != null && ViewBag.EndDate != null)
                                        {
                                            <span>@ViewBag.StartDate.ToString("dd/MM/yyyy") - @ViewBag.EndDate.ToString("dd/MM/yyyy")</span>
                                        }
                                        else
                                        {
                                            <span>Tüm Zamanlar</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    @if (ViewBag.StartDate != null && ViewBag.EndDate != null)
                    {
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <div class="alert alert-info">
                                    <h5>Filtreleme Bilgileri</h5>
                                    <p>
                                        <strong>Başlangıç:</strong> @ViewBag.StartDate.ToString("dd/MM/yyyy")<br>
                                        <strong>Bitiş:</strong> @ViewBag.EndDate.ToString("dd/MM/yyyy")<br>
                                        <strong>Toplam Gider:</strong> @ViewBag.Total.ToString("C")
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 