@model SD_Hotel.Application.DTOs.OvertimeDto

@{
    ViewData["Title"] = "Mesai Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-trash me-2"></i>Mesai Sil
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Bu mesai kaydını silmek istediğinizden emin misiniz?
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Personel:</dt>
                                <dd class="col-sm-8">@Model.EmployeeName</dd>

                                <dt class="col-sm-4">Mesai Tarihi:</dt>
                                <dd class="col-sm-8">@Model.OvertimeDate.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4">Başlangıç Saati:</dt>
                                <dd class="col-sm-8">@Model.StartTime.ToString(@"hh\:mm")</dd>

                                <dt class="col-sm-4">Bitiş Saati:</dt>
                                <dd class="col-sm-8">@Model.EndTime.ToString(@"hh\:mm")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Çalışma Süresi:</dt>
                                <dd class="col-sm-8">@Model.HoursWorked saat</dd>

                                <dt class="col-sm-4">Toplam Ücret:</dt>
                                <dd class="col-sm-8">@Model.TotalPay.ToString("C")</dd>

                                <dt class="col-sm-4">Onay Durumu:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsApproved)
                                    {
                                        <span class="badge badge-success">Onaylandı</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Onay Bekliyor</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Reason))
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="card-title">Mesai Nedeni</h6>
                                    </div>
                                    <div class="card-body">
                                        <p>@Model.Reason</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <form asp-action="Delete" class="mt-3">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Sil
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>İptal
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 